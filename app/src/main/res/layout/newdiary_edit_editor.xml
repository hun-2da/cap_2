<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="450dp"
    android:background="#EDEDED">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="40dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">

                    <android.widget.Button
                        android:id="@+id/editor_TextStyles_Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="3dp"
                        android:background="@drawable/richeditor_textstyles" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">

                    <android.widget.Button
                        android:id="@+id/editor_TextSort_Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@drawable/richeditor_left_text_sort" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/editor_textColor_cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">

                    <android.widget.Button
                        android:id="@+id/editor_TextColor_Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@drawable/richeditor_textcolor" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/editor_backColor_cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">

                    <android.widget.Button
                        android:id="@+id/editor_TextBackColor_Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@drawable/richeditor_textbackcolor" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">

                    <android.widget.Button
                        android:id="@+id/editor_TextSize_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/richeditor_textsize" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">

                    <android.widget.Button
                        android:id="@+id/editor_TextList_Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@drawable/richeditor_textlist" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">

                    <android.widget.Button
                        android:id="@+id/editor_TextNumList_Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@drawable/richeditor_textnumlist" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="8dp">

                        <android.widget.Button
                            android:id="@+id/editor_Save_Button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/richeditor_savebutton" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="10"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:backgroundTint="#00FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="7dp">

                            <TextView
                                android:id="@+id/editor_title_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="@string/editor_Title_textView"
                                android:textColor="#A3A3A2"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <EditText
                            android:id="@+id/editor_Title_editText"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="-5dp"
                            android:background="#EEECFD"
                            android:ems="10"
                            android:inputType="text"
                            android:maxLength="30"
                            android:textStyle="bold" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="7"
                    android:backgroundTint="#FFFFFF"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="7dp">

                            <TextView
                                android:id="@+id/editor_content_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="@string/editor_Conent_textView"
                                android:textColor="#A3A3A2"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <jp.wasabeef.richeditor.RichEditor
                            android:id="@+id/editor_category_richeditor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-1dp"
                            android:background="#EEECFD"
                            android:backgroundTint="#00DF0A0A" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/editor_TextSizeBox_LinarLayout"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <SeekBar
            android:id="@+id/editor_Textsize_seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="40"
            android:progress="0" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/editor_TextStyleBox_LinarLayout"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:background="#EFEFEF"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <android.widget.Button
                android:id="@+id/editor_TextStyles_Bold_Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/richeditor_textbold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <android.widget.Button
                android:id="@+id/editor_TextStyles_Italic_Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/richeditor_textitakuc" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <android.widget.Button
                android:id="@+id/editor_TextStyles_UnderLine_Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/richeditor_textunderline" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <android.widget.Button
                android:id="@+id/editor_TextStyles_StrikeThrough_Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/richeditor_textstrikethrough" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>